<div class="post text-center">
    <article class="card postcard">
        <div class="card-header flex-row justify-space-evenly">
            <h2>{{post.title}}</h2>
            <div>
                Posted by {{post.User.username}} on {{format_date post.createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>

    {{#if post.Comments}}
    <section class="card commentcard text-center">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
            {{#each post.Comments}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    {{User.username}}, {{format_date}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card commentform text-center">
        <div class="card-header">
            <h3>Add New Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment-body">Comment</label>

            <textarea name="comment-body" class="form-input" style="width: 100%;"></textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>
<script src="js/comment.js"></script>